@model uowProject.Models.Publisher
<style>
    .row {
        width: 45%;
        margin-left: 5%;
    }

</style>
<form method="post">
    <div class="row">
        <h2>Update Publisher</h2>
    </div>
    
    <div class="row">
        <input asp-for="PublisherId" type="hidden" />
    </div>
    <div class="row">
        <label asp-for="PublisherName"></label>
        <input asp-for="PublisherName" class="form-control" />
    </div>
    <div class="row">
        <label asp-for="FoundationDate"></label>
        <input asp-for="FoundationDate" class="form-control" />
    </div>
    <div class="row">
        <label asp-for="PublisherValue"></label>
        <input asp-for="PublisherValue" class="form-control" />
    </div>
    <br />
    <div class="row">
        <div>
            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>

    </div>
</form>